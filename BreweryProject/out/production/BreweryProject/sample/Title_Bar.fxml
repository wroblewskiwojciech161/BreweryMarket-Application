<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<HBox  fx:controller="sample.Title_Bar_Controller" alignment="CENTER_RIGHT" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <Circle fill="#f2cb0a" onMouseClicked="#min" radius="7.0" stroke="BLACK" strokeType="INSIDE">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Circle>
      <Circle fill="#26de81" onMouseClicked="#max" radius="7.0" stroke="BLACK" strokeType="INSIDE">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Circle>
      <Circle fill="#ff3b49" onMouseClicked="#close" radius="7.0" stroke="#ff3b49" strokeType="INSIDE">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </Circle>
   </children>
</HBox>
